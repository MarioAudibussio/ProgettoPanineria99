<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"

    tools:context=".menu.ShopFragment">
    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/space_payment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/space_payment"
        android:layout_width="394dp"
        android:layout_height="162dp"
        android:layout_marginBottom="24dp"
        android:clipToOutline="true"
        app:layout_constraintBottom_toTopOf="@+id/payment_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secondline_payment"
            android:layout_width="393dp"
            android:layout_height="44dp"
            android:background="@drawable/tab_white"
            app:layout_constraintBottom_toTopOf="@+id/thirdline_payment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstline_payment">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/thirdline_payment"
            android:layout_width="393dp"
            android:layout_height="44dp"
            android:background="@drawable/tab_white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/firstline_payment"
            android:layout_width="393dp"
            android:layout_height="44dp"
            android:background="@drawable/tab_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/costo"
                android:layout_width="176.5dp"
                android:layout_height="24dp"
                android:gravity="top"
                android:text="Costo"
                android:textAppearance="@style/descriptionProduct"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/prezzo_costo"
                android:layout_width="176.5dp"
                android:layout_height="24dp"
                android:gravity="top"
                android:textAlignment="textEnd"
                android:text="Costo"
                android:textAppearance="@style/descriptionProduct"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payment_button"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/tab_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Procedi al Pagamento"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textAppearance="@style/nameProduct">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
