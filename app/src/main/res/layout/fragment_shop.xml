<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"

    tools:context=".menu.ShopFragment">
    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/coupon_space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>






    <!-- Auto layout, variables, and unit scale are not yet supported -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/coupon_space"
        android:layout_width="394dp"
        android:layout_height="86dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/tab_white"
        app:layout_constraintBottom_toTopOf="@+id/space_payment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <!-- Auto layout, variables, and unit scale are not yet supported -->
        <EditText
            android:id="@+id/inserisci_sconto"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="inserisci coupon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/frame_102"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frame_102"
            android:layout_width="160dp"
            android:layout_height="58dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/tab_yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:text="Conferma"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/space_payment"
        android:layout_width="394dp"
        android:layout_height="162dp"
        android:layout_marginBottom="24dp"
        android:clipToOutline="true"
        app:layout_constraintBottom_toTopOf="@+id/payment_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secondline_payment"
            android:layout_width="393dp"
            android:layout_height="44dp"
            android:padding="12dp"
            android:background="@drawable/tab_white"
            app:layout_constraintBottom_toTopOf="@+id/thirdline_payment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstline_payment">
            <TextView
                android:id="@+id/spedizione"
                android:layout_width="176.5dp"
                android:layout_height="24dp"
                android:gravity="top"
                android:text="Spedizione:"
                android:textSize="18sp"
                android:textAppearance="@style/descriptionProduct"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/spedizione_costo"
                android:layout_width="176.5dp"
                android:layout_height="24dp"
                android:gravity="top"
                android:textAlignment="textEnd"
                android:text="4,99€"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/thirdline_payment"
            android:layout_width="393dp"
            android:layout_height="44dp"
            android:background="@drawable/tab_white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/costo_totale"
                android:layout_width="176.5dp"
                android:layout_height="24dp"
                android:gravity="top"
                android:text="Costo Totale:"
                android:textSize="18sp"
                android:textAppearance="@style/descriptionProduct"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/prezzo_costo_totale"
                android:layout_width="176.5dp"
                android:layout_height="24dp"
                android:gravity="top"
                android:textAlignment="textEnd"
                android:text="19,98€"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/firstline_payment"
            android:layout_width="393dp"
            android:layout_height="44dp"
            android:background="@drawable/tab_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/costo"
                android:layout_width="176.5dp"
                android:layout_height="24dp"
                android:gravity="top"
                android:text="Costo:"
                android:textSize="18sp"
                android:textAppearance="@style/descriptionProduct"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/prezzo_costo"
                android:layout_width="176.5dp"
                android:layout_height="24dp"
                android:gravity="top"
                android:textAlignment="textEnd"
                android:text="14,99€"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payment_button"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/tab_menu_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Procedi al Pagamento"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textAppearance="@style/nameProduct">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
